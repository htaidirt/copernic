source 'https://rubygems.org'

gem 'rails', '4.0.0'				# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'pg'							# Use postgresql as the database for Active Record

gem 'haml-rails'					# Be smart, use HAML

gem 'sass-rails', '~> 4.0.0'		# Use SCSS for stylesheets

gem 'uglifier', '>= 1.3.0'			# Use Uglifier as compressor for JavaScript assets
gem 'coffee-rails', '~> 4.0.0'		# Use CoffeeScript for .js.coffee assets and views
gem 'jquery-rails'					# Use jquery as the JavaScript library

# See https://github.com/sstephenson/execjs#readme for more supported runtimes
# gem 'therubyracer', platforms: :ruby

gem 'turbolinks'					# Turbolinks makes following links in your web application faster
gem 'jbuilder', '~> 1.2'			# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder

group :doc do
	gem 'sdoc', require: false			# bundle exec rake doc:rails generates the API under doc/api.
end

group :development, :test do		# Gems for dev only
	gem 'better_errors'					# Have better error messages
	gem 'binding_of_caller'				# Retrieve the binding of a method's caller in MRI 1.9.2+
	gem 'meta_request'					# Supporting gem for Rails Panel
	gem 'quiet_assets'					# Mutes assets pipeline log messages
end

# Use ActiveModel has_secure_password
# gem 'bcrypt-ruby', '~> 3.0.0'

# Use unicorn as the app server
# gem 'unicorn'

# Use debugger
# gem 'debugger', group: [:development, :test]
